{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "quotes": ["error", "double"],
    "comma-dangle": ["error", "always-multiline"],
    "space-before-function-paren": 0,
    "object-curly-spacing": ["error", "never"],
    "no-unused-vars": "warn"
  }
}
