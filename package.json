{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "debug": "NODE_ENV=development npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "serve": "NODE_ENV=production node dist/server.js",
    "start": "npm run serve",
    "watch-debug": "NODE_ENV=development  concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\"  \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "NODE_ENV=development  nodemon dist/server.js",
    "watch-ts": "NODE_ENV=development  tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\"",
    "lint": "eslint --ignore-path .gitignore \"./src/**/*\"",
    "prettier:check": "prettier \"src/**/*.{ts,tsx,html,css,js}\" --check",
    "prettier:fix": "prettier \"src/**/*.{ts,tsx,html,css,js}\" --write",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.12",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.12.4",
    "@types/pg": "^8.6.0",
    "@types/ws": "^7.4.5",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "concurrently": "^6.2.0",
    "eslint": "^7.29.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cli-highlight": "^2.1.11",
    "compression": "^1.7.4",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "pg": "8",
    "postgrator": "^4.1.1",
    "ws": "^7.5.0"
  }
}
